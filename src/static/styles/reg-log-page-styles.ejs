<style>
	body {
		background-color: #eee;
	}

	.container {
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.card {
		width: 360px;
		background-color: #fff;
		border-radius: 10px;
		border: none;
		padding: 20px;
	}

